<body>
  <!--Navbar-->
  <%- include(".././partials/headerMgr") %>
    <section class="employy">
    <div class="container">
      <div class="row mt-3">
        <form class=" col-lg-5  offset-lg-3 off mt-5 pb-5" method="post">
          <div class="row  officer-form  mr-1 ">
            <label for="name" class="mr-4">ادخل اسم المستخدم</label>
            <input type='text' name="name" id='name' required class="mr-2">
          </div>
          <div class=" row officer-form  mr-1">
            <label for="national_number"class="mr-4" >ادخل الرقم الوطني</label>
            <input type='text' pattern="[0-9]{11}" name="national_number" id='national_number' required class="mr-2">
          </div>
          <div class=" row officer-form   mr-1">
            <label for="email" class="mr-4">ادخل البريد الالكتروني</label>
            <input type='email' name="email" id='email' required class="mr-2">
          </div>
          <div style="display: none;" class="row  officer-form ">
            <label for="password">ادخل كلمة المرور</label>
            <input type='password' name="password" id='password' value="00000000" readonly required>
          </div>
          <div style="display: none;" class="row  officer-form  ">
            <label for="">اعد كتابة كلمة المرور</label>
            <input type='password' name="passwordConfirm" id='passwordConfirm' value="00000000" required>
          </div>
          <div class="row officer-form  mr-1">
            <label for="role" class="mr-4">شرطي او موظف</label>
    <input list="rol" class="select-label mr-2" name="role" id="role" required/>
    <datalist id="rol">
        <option value="شرطي">
        <option value="موظف">
    </datalist>
          </div>
          <div class="officer-form">
            <button class="button m-auto " style="width: 80%;">إضافة موظف</button>
          </div>
        </form>
      </div>
    </section>
